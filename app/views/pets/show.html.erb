<h1><%= @pet.name %></h1>
<h3><%= @pet.age %> years old</h3>
<h3><%= @pet.breed %></h3>
<h3><%= @pet.adoptable %></h3>
<h3><%= @pet.shelter_name %></h3>

<p><%= button_to "Update #{@pet.name}", pet_path(@pet.id) %></p>
<p><%= button_to "Delete #{@pet.name}", pet_path(@pet.id), method: :delete %></p>
