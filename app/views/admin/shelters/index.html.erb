<h1>Shelters</h1>

<div id="pending_shelters">
  <h2>Shelters with Pending Applications</h2>
  <% if @shelters_with_pending_apps.count == 0 %>
    <p>No shelters with pending applications</p>
  <% else %>
    <% @shelters_with_pending_apps.each do |shelter| %>
      <div id="pending_shelter-<%= shelter.id %>">
        <p><%= shelter.name %></p>
      </div>
    <% end %>
  <% end %>
</div>

<br>
<h2>All Shelters</h2>
<% @all_shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <p><%= shelter.name %></p>
  </div>
<% end %>
